<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.foodswaha.foodswaha" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/FoodSwahaTheme" >
        <activity
            android:name=".AppInitializerActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayHotelsActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".DisplayHotelMenuActivity"
            android:label="@string/hotel_menu"
            android:launchMode="singleTop"
            android:parentActivityName=".DisplayHotelsActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DisplayHotelsActivity" />
        </activity>
        <activity
            android:name=".DisplayHotelMenuItemSub"
            android:label="@string/title_activity_display_hotel_menu_item_sub"
            android:launchMode="singleTop"
            android:parentActivityName=".DisplayHotelMenuActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DisplayHotelMenuActivity" />
        </activity>
        <activity
            android:name=".EditLocationActivity"
            android:label="@string/title_activity_edit_location" >
        </activity>
        <activity
            android:name=".DisplayCartActivity"
            android:label="@string/title_activity_display_cart"
            android:parentActivityName=".DisplayHotelMenuItemSub"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DisplayHotelMenuItemSub" />
        </activity>
    </application>

</manifest>

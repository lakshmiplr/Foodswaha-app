<resources>

    <style name="FoodSwahaTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#3B5998</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">#3B5998</item>
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/foodswaha_stars</item>
        <item name="android:minHeight">29dip</item>
        <item name="android:maxHeight">29dip</item>
        <item name="android:minWidth">50dip</item>
        <item name="android:maxWidth">50dip</item>
    </style>
    <style name="bold" >
        <item name="android:textStyle">bold</item>
    </style>

</resources>
